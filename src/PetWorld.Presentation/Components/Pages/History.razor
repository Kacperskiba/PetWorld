@page "/history"
@using Microsoft.AspNetCore.Components.QuickGrid
@inject IChatService ChatService
@rendermode InteractiveServer

<PageTitle>Historia rozmow - PetWorld</PageTitle>

<div class="history-container">
    <div class="history-header">
        <h1>Historia rozmow</h1>
        <p>Przegladaj poprzednie rozmowy z asystentem</p>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="loading-dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
            <p>Ladowanie historii...</p>
        </div>
    }
    else if (historyProvider != null && totalItemCount > 0)
    {
        <div class="history-table-wrapper">
            <QuickGrid ItemsProvider="historyProvider" Pagination="pagination" Class="history-grid">
                <PropertyColumn Property="@(x => x.Date)" Title="Data" Format="dd.MM.yyyy HH:mm" Sortable="true" />
                <TemplateColumn Title="Pytanie" Sortable="true" SortBy="@(GridSort<ChatHistoryItemDto>.ByAscending(x => x.Question))">
                    <div class="history-item-question" title="@context.Question">
                        @TruncateText(context.Question, 80)
                    </div>
                </TemplateColumn>
                <TemplateColumn Title="Odpowiedz" Sortable="true" SortBy="@(GridSort<ChatHistoryItemDto>.ByAscending(x => x.Answer))">
                    <div class="history-item-answer" title="@context.Answer">
                        @TruncateText(context.Answer, 150)
                    </div>
                </TemplateColumn>
                <TemplateColumn Title="Iteracje" Sortable="true" SortBy="@(GridSort<ChatHistoryItemDto>.ByAscending(x => x.IterationCount))">
                    <span class="badge @GetIterationBadgeClass(context.IterationCount)">
                        @context.IterationCount
                    </span>
                </TemplateColumn>
            </QuickGrid>
        </div>

        <div class="pagination-wrapper">
            <Paginator State="pagination" />
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">ðŸ’¬</div>
            <h3>Brak historii rozmow</h3>
            <p>Rozpocznij rozmowe z asystentem, a Twoja historia pojawi sie tutaj.</p>
            <a href="/">Rozpocznij czat</a>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            @errorMessage
        </div>
    }
</div>

