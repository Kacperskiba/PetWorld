        background: #1e2a4a;
    }

    ::deep .history-grid th[aria-sort]::after {
        margin-left: 0.5rem;
        opacity: 0.7;
    }

    ::deep .history-grid th[aria-sort="ascending"]::after {
        content: " â†‘";
    }

    ::deep .history-grid th[aria-sort="descending"]::after {
        content: " â†“";
    }

    ::deep .history-grid td {
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--border-color);
        color: var(--text-primary);
        vertical-align: top;
    }

