</style>

@code {
    private GridItemsProvider<ChatHistoryItemDto>? historyProvider;
    private PaginationState pagination = new() { ItemsPerPage = 15 };
    private bool isLoading = true;
    private string? errorMessage;
    private int totalItemCount;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var initialResult = await ChatService.GetHistoryPagedAsync(1, 1, null, false);
            totalItemCount = initialResult.TotalCount;

            if (totalItemCount > 0)
            {
                historyProvider = async request =>
                {
                    var page = (request.StartIndex / pagination.ItemsPerPage) + 1;
                    var sortProperties = request.GetSortByProperties().ToList();
                    var sortColumn = sortProperties.Count > 0 ? sortProperties[0].PropertyName : null;
                    var ascending = sortProperties.Count > 0 && sortProperties[0].Direction == SortDirection.Ascending;

                    var result = await ChatService.GetHistoryPagedAsync(page, pagination.ItemsPerPage, sortColumn, ascending);

                    return GridItemsProviderResult.From(result.Items.ToList(), result.TotalCount);
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Wystapil blad: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= maxLength)
            return text;
        return text.Substring(0, maxLength) + "...";
    }

    private string GetIterationBadgeClass(int iterations) => iterations switch
    {
        1 => "badge-success",
        2 => "badge-warning",
        _ => "badge-danger"
    };
}
